@model List<Course>

                @foreach(var kurs in @Model){
                <div class="card mb-3 ">
                    <div class="row">
                        <div class="col-md-4">
                            <img width="200" class="img-fluid rounded-start" src="~/img/@kurs.Image" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@kurs.Id">
                                    <h5 class="card-title">@kurs.Title</h5>
                                </a>
                               
                                <p class="card-text">@kurs.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
                }
       
